<!DOCTYPE html>
<html ng-app="TripApp">
<!--put in layout.html, ngapp so the angular controllers are used for all views-->

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="The description of my page" />
    <meta http-equiv="Access-Control-Allow-Origin" content="*" />
    <style>
       body {
           background-image: url('../../Content/images/14861_All n trips com_logo_1.jpg');
           background-repeat: no-repeat;
           background-attachment: fixed;
           background-position: left;
       }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AllNTrips", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" ng-controller="MenuController">
                <ul class="nav navbar-nav">
                    <li><a href="#/">Welcome</a></li>
                    <li><a href="#/MyProfile">My Profile</a></li>
                    <li><a href="#/MyVacations">My Vacations</a></li>
                    <li><a href="#/Registration">Registration</a></li>
                    <li><a href="#/ContactUs">Contact Us</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li ng-hide="isLoggedIn()"><a href="#/Login">Login</a></li>
                    <li ng-show="isLoggedIn()" style="color:white; padding-top: 15px;">{{username}}</li>
                    <li ng-show="isLoggedIn()"><a href="" ng-click="logout()">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular") <!--here we add bundles to the layout so all views have it-->
    @RenderSection("scripts", required: false)
</body>
</html>
